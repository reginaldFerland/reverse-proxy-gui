@model Mapping

@{
    ViewData["Title"] = "Delete Mapping";
}

<div class="mb-6">
    <h1 class="text-2xl font-bold text-gray-800">Delete Mapping</h1>
</div>

<div class="bg-red-50 border-l-4 border-red-500 p-4 mb-6">
    <div class="flex">
        <div class="flex-shrink-0">
            <svg class="h-5 w-5 text-red-500" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor">
                <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zM8.707 7.293a1 1 0 00-1.414 1.414L8.586 10l-1.293 1.293a1 1 0 101.414 1.414L10 11.414l1.293 1.293a1 1 0 001.414-1.414L11.414 10l1.293-1.293a1 1 0 00-1.414-1.414L10 8.586 8.707 7.293z" clip-rule="evenodd" />
            </svg>
        </div>
        <div class="ml-3">
            <h4 class="text-lg font-medium text-red-800">Are you sure you want to delete this mapping?</h4>
        </div>
    </div>
</div>

<div class="bg-white shadow-md rounded-lg p-6 max-w-3xl">
    <dl class="grid grid-cols-1 md:grid-cols-3 gap-x-4 gap-y-6">
        <dt class="text-sm font-medium text-gray-500">
            @Html.DisplayNameFor(model => model.Name)
        </dt>
        <dd class="text-sm text-gray-900 md:col-span-2">
            @Html.DisplayFor(model => model.Name)
        </dd>
        
        <dt class="text-sm font-medium text-gray-500">
            @Html.DisplayNameFor(model => model.RoutePattern)
        </dt>
        <dd class="text-sm text-gray-900 md:col-span-2">
            @Html.DisplayFor(model => model.RoutePattern)
        </dd>
        
        <dt class="text-sm font-medium text-gray-500">
            @Html.DisplayNameFor(model => model.Destination1)
        </dt>
        <dd class="text-sm text-gray-900 md:col-span-2">
            @Html.DisplayFor(model => model.Destination1)
        </dd>
        
        <dt class="text-sm font-medium text-gray-500">
            @Html.DisplayNameFor(model => model.Destination2)
        </dt>
        <dd class="text-sm text-gray-900 md:col-span-2">
            @Html.DisplayFor(model => model.Destination2)
        </dd>
        
        <dt class="text-sm font-medium text-gray-500">
            @Html.DisplayNameFor(model => model.ActiveDestination)
        </dt>
        <dd class="text-sm text-gray-900 md:col-span-2">
            <span class="px-2 py-1 inline-flex text-xs leading-5 font-semibold rounded-full @(Model.ActiveDestination == 1 ? "bg-green-100 text-green-800" : "bg-blue-100 text-blue-800")">
                @(Model.ActiveDestination == 1 ? "Destination 1" : "Destination 2")
            </span>
        </dd>
    </dl>
    
    <div class="mt-8 flex items-center space-x-4">
        <form asp-action="Delete">
            <input type="hidden" asp-for="Id" />
            <button type="submit" class="inline-flex items-center px-4 py-2 border border-transparent rounded-md shadow-sm text-sm font-medium text-white bg-red-600 hover:bg-red-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-red-500">
                Delete
            </button>
        </form>
        <a asp-action="Index" class="inline-flex items-center px-4 py-2 border border-gray-300 rounded-md shadow-sm text-sm font-medium text-gray-700 bg-white hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500">
            Cancel
        </a>
    </div>
</div>