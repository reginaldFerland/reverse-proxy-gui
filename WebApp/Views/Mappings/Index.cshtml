@model IEnumerable<Mapping>

@{
    ViewData["Title"] = "Mappings";
}

<h1>Mappings</h1>

<div class="mb-3">
    <a asp-action="Create" class="btn btn-primary">Create New</a>
</div>

<div class="table-responsive">
    <table class="table table-striped table-hover">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Name)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.RoutePattern)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Destination1)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Destination2)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.ActiveDestination)
                </th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.RoutePattern)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Destination1)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Destination2)
                    </td>
                    <td>
                        @(item.ActiveDestination == 1 ? "Destination 1" : "Destination 2")
                    </td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-primary">Edit</a>
                        <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-info">Details</a>
                        <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-danger">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>